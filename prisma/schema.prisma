datasource db {
  provider = "postgresql"  
  schemas  = ["auth", "game","admin"]  
}

generator client {
  provider = "prisma-client-js"
}


// region Auth Models
enum OAuthProvider {
  GOOGLE
  KAKAO
  NAVER
  
  @@schema("auth")
}

enum UserStatus {
  ACTIVE
  BLOCKED
  DELETED
  PENDING

  @@schema("auth")
}

model UserAccount {
  id        Int       @id @default(autoincrement())  
  email     String?   @unique
  password  String?   // 로컬 로그인용 (OAuth면 null)

  status    UserStatus @default(PENDING)

  oauths    OAuthAccount[]
  emailVerifications EmailVerification[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@schema("auth")
}

model OAuthAccount {
  id              Int      @id @default(autoincrement())
  userId          Int
  user            UserAccount     @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider        OAuthProvider
  providerUserId  String

  createdAt       DateTime @default(now())

  @@unique([provider, providerUserId])
  @@index([userId])

  @@schema("auth")
}

model EmailVerification {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  verified  Boolean  @default(false)

  user      UserAccount     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@schema("auth")
}

// region Game Models
enum ItemType {
  CONSUMABLE   // 소모품
  EQUIPMENT    // 장비
  MATERIAL     // 재료
  ETC          // 기타

  @@schema("game")
}

enum ItemGrade {
  COMMON
  RARE
  EPIC
  LEGENDARY

  @@schema("game")
}

enum EquipmentSlot {
  WEAPON
  ARMOR
  HELMET
  RING

  @@schema("game")
}

model Item {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Int

  type        ItemType
  grade       ItemGrade

  slot        EquipmentSlot?   // 장비 전용
  stackable   Boolean     @default(true)
  maxStack    Int?

  sellable    Boolean     @default(true)

  iconUrl     String?

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  userItems   UserItem[]

  @@schema("game")
}

model UserProfile {
  id        Int      @id
  nickname  String  
  createdAt DateTime @default(now())

  items     UserItem[]

  @@schema("game")
}

model UserItem{
  id         Int      @id @default(autoincrement())
  userId     Int
  itemId     Int
  quantity   Int      @default(1)

  user       UserProfile     @relation(fields: [userId], references: [id], onDelete: Cascade)
  item       Item            @relation(fields: [itemId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())
    
  @@index([userId])
  @@index([itemId])

  @@schema("game")
}


// region Admin Models
enum AdminRole {
  SUPER
  OPERATOR
  VIEWER

  @@schema("admin")
}


enum AdminStatus {
  ACTIVE  
  PENDING
  BLOCKED

  @@schema("admin")
}

model Admin {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  status    AdminStatus @default(PENDING)
  role      AdminRole @default(OPERATOR)
  createdAt DateTime  @default(now())

  @@schema("admin")
}